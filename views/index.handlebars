<h1>Burgers</h1>

<img src="../assets/img/burger.jpg" alt="burgerpic">


<ul>
  {{#each burger}}
    {{#unless Devour}}
      {{> partial/burger-block newburger=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers Added</h2>

<ul>
  {{#each burger}}
    {{#if Devour}}
      {{> partial/burger-block newburger=false}}
    {{/if}}
  {{/each}}
</ul>
<div>
  <form action="/api/burgers" method="POST" id="addburger">
  	<textarea type="text" name="burger"></textarea>

  	<button type="submit">Add Burger</button>
  </form>
</div>
